{% extends 'page.twig' %}

{% import 'form.twig' as f %}

{% block title %}
  {{context.user.login}}
{% endblock title %}

{% block main %}
    <section class="row">
        <div class="col-md-offset-2 col-md-10">

        <h2>{{context.user.email}}</h2>

        {% if done is defined %}
          <p class="bg-success">Saved </p>
        {% endif %}

        <form action="#" method="post">
            {{ f.email({label: 'Email', value: context.user.email, ph: 'Your email address', required: 1 }) }}
            <button type='submit' class='btn btn-primary btn-lg'> Update </button>
        </form>


        <p>
        Hello {{context.user.login}} BOYA
        </p>
        </div>
    </section>
{% endblock main %}
